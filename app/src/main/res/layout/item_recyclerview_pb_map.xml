<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_common_white_frame">

    <TextView
        android:id="@+id/textView_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="杏花岭区党组织"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView_appointment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_appointment"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:src="@mipmap/icon_keyuyue"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_time"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/fw_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_headline" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="周一至周五 9:00-17:00"
        android:textColor="#ff333333"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_time"
        app:layout_constraintTop_toTopOf="@+id/imageView_time" />


    <ImageView
        android:id="@+id/imageView_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/fw_phone"
        app:layout_constraintBottom_toBottomOf="@+id/textView_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_time" />


    <View
        android:id="@+id/view10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toTopOf="@+id/textView_site"
        app:layout_constraintEnd_toEndOf="@+id/imageView_phone"
        app:layout_constraintStart_toStartOf="@+id/imageView_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_time"></View>

    <ImageView
        android:id="@+id/imageView_site"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:src="@mipmap/fw_dw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_time" />

    <TextView
        android:id="@+id/textView_site"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="72dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_detail"
        app:layout_constraintStart_toEndOf="@+id/imageView_site"
        app:layout_constraintTop_toTopOf="@+id/imageView_site" />


    <ImageView
        android:id="@+id/imageView_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@mipmap/ic_more"
        app:layout_constraintBottom_toBottomOf="@+id/textView_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_site" />


    <TextView
        android:id="@+id/textView_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="距离目的地有463m"
        android:textColor="#ffaaaaaa"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/textView_site"
        app:layout_constraintTop_toBottomOf="@+id/textView_site" />

