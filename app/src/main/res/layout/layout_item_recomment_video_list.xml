<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp">

    <ImageView
        android:id="@+id/recomment_video_img"
        android:layout_width="199dp"
        android:layout_height="112dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_load_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.allen.library.SuperTextView
        android:id="@+id/recomment_video_time_stv"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/recomment_video_img"
        app:layout_constraintRight_toRightOf="@+id/recomment_video_img"
        app:sCenterTextColor="@color/white"
        app:sCenterTextSize="8sp"
        app:sShapeCornersRadius="10dp"
        app:sShapeSelectorNormalColor="#80000000"
        app:sShapeSelectorPressedColor="#80000000"
        app:sUseShape="true" />

    <TextView
        android:id="@+id/recomment_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="test"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recomment_video_img"
        app:layout_constraintTop_toBottomOf="@+id/recomment_video_img"
        />
</android.support.constraint.ConstraintLayout>