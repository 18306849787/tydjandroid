<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recommend_item_img"
        android:layout_width="115dp"
        android:layout_height="86dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recommend_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="组工动态 "
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/recommend_item_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recommend_item_img" />

    <TextView
        android:id="@+id/recommend_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="山西组工 2020.8.19"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_item_img"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>