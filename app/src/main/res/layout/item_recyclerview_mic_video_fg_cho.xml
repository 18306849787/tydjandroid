<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="311dp"
    android:paddingRight="5dp">
    <!--android:layout_width="248dp"
    android:layout_height="338dp">-->


    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView_play"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="20dp"
        android:src="@mipmap/jingxuan_btn_play"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView_head_bg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/fg_choiceness_shape1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_img_head"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/img_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_head_bg"
        app:layout_constraintEnd_toEndOf="@+id/imageView_head_bg"
        app:layout_constraintStart_toStartOf="@+id/imageView_head_bg"
        app:layout_constraintTop_toTopOf="@+id/imageView_head_bg" />

    <TextView
        android:id="@+id/textView_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="22dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_img_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circle_img_head"
        app:layout_constraintTop_toTopOf="@+id/circle_img_head" />


</android.support.constraint.ConstraintLayout>
