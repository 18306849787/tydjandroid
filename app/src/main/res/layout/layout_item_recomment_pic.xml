<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/recommend_item_img"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_load_img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_item_time"
        app:layout_constraintTop_toTopOf="@+id/recommend_item_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recommend_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textStyle="bold"
        android:text="组工动态 "
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/recommend_item_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recommend_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="山西组工 2020.8.19"
        android:textColor="#ff999999"
        android:textSize="10sp"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toTopOf="@+id/recommend_item_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/recommend_item_time"/>
</android.support.constraint.ConstraintLayout>