    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="0dp"
        android:paddingRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title">
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="7dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView1_play"
                android:layout_width="9dp"
                android:layout_height="8dp"
                android:src="@mipmap/djsw_icon_play"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toBottomOf="@id/imageView1"
                app:layout_constraintStart_toStartOf="@id/imageView1" />

            <TextView
                android:id="@+id/textView1_play_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView1_play"
                app:layout_constraintStart_toEndOf="@+id/imageView1_play"
                app:layout_constraintTop_toTopOf="@+id/imageView1_play" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:ellipsize="end"

                android:text=""
                android:textColor="#ff333333"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView1" />
            <TextView
                android:id="@+id/textView1_subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textColor="#ffaaaaaa"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
