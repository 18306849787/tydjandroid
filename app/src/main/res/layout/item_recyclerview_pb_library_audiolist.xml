<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/part_building_library_bg">

    <!--@color/part_building_library_bg-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="50dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#ff999999"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
    

    <TextView
        android:id="@+id/textView_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_hint1"
        android:layout_width="9dp"
        android:layout_height="11dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/djsw_icon_bofangshu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_headline" />

    <TextView
        android:id="@+id/textView_play_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="2170"
        android:textColor="#ffaaaaaa"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_hint1"
        app:layout_constraintStart_toEndOf="@+id/imageView_hint1"
        app:layout_constraintTop_toTopOf="@+id/imageView_hint1" />

    <ImageView
        android:id="@+id/textView_hint2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="19dp"
        android:src="@mipmap/djsw_icon_shichang"
        app:layout_constraintBottom_toBottomOf="@+id/textView_play_times"
        app:layout_constraintStart_toEndOf="@+id/textView_play_times"
        app:layout_constraintTop_toTopOf="@+id/textView_play_times" />

    <TextView
        android:id="@+id/textView_play_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="17:16"
        android:textColor="#ffaaaaaa"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_hint2"
        app:layout_constraintStart_toEndOf="@+id/textView_hint2"
        app:layout_constraintTop_toTopOf="@+id/textView_hint2" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="2018-07"
        android:textColor="#ffaaaaaa"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_play_duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_play_duration" />


</android.support.constraint.ConstraintLayout>
