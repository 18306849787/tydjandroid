<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:layout_margin="5dp"
    android:background="@color/part_building_video_bg">

    <ImageView
        android:id="@+id/imageView_find_fascinating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_find_fascinating" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_img_head"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_headline" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_img_head"
        app:layout_constraintEnd_toStartOf="@+id/imageView_see"
        app:layout_constraintStart_toEndOf="@+id/circle_img_head"
        app:layout_constraintTop_toTopOf="@+id/circle_img_head" />

    <ImageView
        android:id="@+id/imageView_see"
        android:layout_width="14dp"
        android:layout_height="11dp"
        android:layout_marginEnd="5dp"
        android:src="@mipmap/icon_liulanshu"
        app:layout_constraintBottom_toBottomOf="@+id/circle_img_head"
        app:layout_constraintEnd_toStartOf="@+id/textView_play_times"
        app:layout_constraintTop_toTopOf="@+id/circle_img_head" />

    <TextView
        android:id="@+id/textView_play_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:text=""
        android:textColor="#ffaaaaaa"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_img_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circle_img_head" />

</android.support.constraint.ConstraintLayout>
