<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.quanminlangdu.mac.ReadActivity">
    <View
        android:id="@+id/mView"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_marginStart="3dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="朗读厅"
            android:textColor="#333333"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:id="@+id/fabo_btn"
            android:background="@drawable/fabu_btn_selector" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/read_ac_bg">

        <com.typartybuilding.activity.quanminlangdu.dialog.MyReadScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:id="@+id/read_scroll_view"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共产党员学习手册"
                    android:textColor="#ff333333"
                    android:id="@+id/book_tile"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者：高开华"
                    android:textColor="#333300"
                    android:id="@+id/book_author"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:id="@+id/book_detail"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="	   党章是管党治党的总章程，党规是党员思想和行为的具体遵循。学习党章党规，要深刻认识党章是管党治党的总规矩总遵循，践行党内政治生活准则、党内监督条例和廉洁自律准则等党内法规要求。为便于广大党员干部更好学习党章党规及党的有关知识，党建读物出版社根据习近平新时代中国特色社会主义思想和党的十九大精神，路线等最新知识要点。"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    android:lineSpacingExtra="25dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="450dp"/>
            </LinearLayout>
        </com.typartybuilding.activity.quanminlangdu.dialog.MyReadScrollView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:paddingTop="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/schm_book_whrite"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/bgm_list"
            android:layout_width="match_parent"
            android:background="#f7f7f7"
            android:layout_height="36dp">

            <ImageView
                android:layout_width="15dp"
                android:id="@+id/yuefu"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ldt_icon_yuefu" />

            <TextView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/yuefu"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="轻缓"
                android:textColor="#ff666666"
                android:textSize="13sp"
                />
            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/bgm_play_btn"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="18dp"
                    android:id="@+id/bgn_icon"
                    android:layout_height="17dp"
                    android:background="@drawable/play_select_color"
                    android:orientation="vertical" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <pl.droidsonroids.gif.GifImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/yin"
                android:id="@+id/is_gif"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@color/schm_book_whrite"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/time_background"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00/90:00"
                    android:id="@+id/timeGo"
                    android:textColor="#ff333333"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/speak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="43dp"
                android:gravity="clip_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="27dp"
                    android:id="@+id/shibo_play"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shibo_selector" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/shibo_play_text"
                    android:text="暂停"
                    android:textColor="@drawable/shibo_text_select_color"
                    android:textSize="11sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/puse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/begin_recond"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/puse_select_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="准备录制"
                    android:textColor="#ff000000"
                    android:textSize="11sp"
                    android:id="@+id/begin_recond_text"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="43dp">
                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="27dp"
                    android:orientation="vertical"
                    android:id="@+id/reset_btn"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/reset_able_selector" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="重录"
                    android:textColor="@drawable/shibo_text_select_color"
                    android:textSize="11sp"
                    android:id="@+id/reset_btn_text"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>