<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".activity.plusRelatedActivity.Camera2Activity">

   <!-- <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <FrameLayout
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" />


    <ImageView
        android:id="@+id/imageView_back1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_annulus"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/ac_camera_shape2"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_circle"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:src="@drawable/ac_camera_shape1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_annulus"
        app:layout_constraintEnd_toEndOf="@+id/imageView_annulus"
        app:layout_constraintStart_toStartOf="@+id/imageView_annulus"
        app:layout_constraintTop_toTopOf="@+id/imageView_annulus" />

    <ImageView
        android:id="@+id/imageView_upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/shape_test"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_annulus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_annulus" />

    <TextView
        android:id="@+id/textView_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="上传"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_upload"
        app:layout_constraintStart_toStartOf="@+id/imageView_upload"
        app:layout_constraintTop_toBottomOf="@+id/imageView_upload" />

    <TextView
        android:id="@+id/textView_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:drawablePadding="6dp"
        android:drawableBottom="@drawable/ac_camera_shape3_1"
        android:text="拍照"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_annulus"
        app:layout_constraintStart_toStartOf="@+id/imageView_annulus"
        app:layout_constraintTop_toBottomOf="@+id/imageView_annulus" />

    <TextView
        android:id="@+id/textView_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:drawablePadding="6dp"
        android:drawableBottom="@drawable/ac_camera_shape3_0"
        android:text="拍视频"
        android:textColor="#ff6f5954"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_center"
        app:layout_constraintEnd_toStartOf="@+id/textView_center"
        app:layout_constraintTop_toTopOf="@+id/textView_center" />

    <TextView
        android:id="@+id/textView_photo"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:drawableBottom="@drawable/ac_camera_shape3_0"
        android:drawablePadding="6dp"
        android:text="拍照"
        android:textColor="#ff6f5954"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_center"
        app:layout_constraintStart_toEndOf="@+id/textView_center"
        app:layout_constraintTop_toTopOf="@+id/textView_center" />



</android.support.constraint.ConstraintLayout>