<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:gravity="center"
        android:text="互动"
        android:layout_marginTop="35dp"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/colorBg"/>

    <com.typartybuilding.view.SlidingTabLayoutNew
        android:id="@+id/interative_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/viewStatusBar"
        app:tl_indicator_color="#D62404"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="41dp"
        app:tl_textsize="14sp"
        app:tl_underline_gravity="BOTTOM"
        app:tl_underline_height="0.5dp"
        app:tl_underline_color="@color/colorBg"
        app:tl_textSelectColor="#D62404"
        app:tl_textUnselectColor="@color/c_333333">
   <!-- <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/interative_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/viewStatusBar"
        app:tl_indicator_color="#D62404"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="41dp"
        app:tl_textsize="14sp"
        app:tl_textSelectColor="#D62404"
        app:tl_textUnselectColor="@color/c_333333">-->

    </com.typartybuilding.view.SlidingTabLayoutNew>

    <com.typartybuilding.view.NoSlideViewPager
        android:id="@+id/interative_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/interative_tab">


    </com.typartybuilding.view.NoSlideViewPager>
</LinearLayout>