<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/recommend_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="组工动态 "
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/recommend_item_img3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recommend_item_title">
        <com.typartybuilding.view.RoundImageViewNew
            android:id="@+id/recommend_item_imgview0"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:border_radius="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_load_img"
            android:layout_height="78dp" />
        <View
            android:layout_width="16dp"
            android:layout_height="1dp"/>
        <com.typartybuilding.view.RoundImageViewNew
            android:id="@+id/recommend_item_imgview1"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:border_radius="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_load_img"
            android:layout_height="78dp" />
        <View
            android:layout_width="16dp"
            android:layout_height="1dp"/>
        <com.typartybuilding.view.RoundImageViewNew
            android:id="@+id/recommend_item_imgview2"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:border_radius="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_load_img"
            android:layout_height="78dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/recommend_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="山西组工 2020.8.19"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommend_item_img3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#eeeeee"
        app:layout_constraintTop_toBottomOf="@+id/recommend_item_time" />
</android.support.constraint.ConstraintLayout>