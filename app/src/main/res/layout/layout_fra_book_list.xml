<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <RadioGroup
        android:id="@+id/book_list_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_book_list_redio_bg"
        android:orientation="horizontal"
        android:padding="2dp">
        <RadioButton
            android:id="@+id/book_list_radio_group_book"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:button="@null"
            android:text="读单"
            android:textStyle="bold"
            android:textColor="@color/c_333333"
            android:textSize="12sp"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/bg_book_list_radio_select"
            />
        <RadioButton
            android:id="@+id/book_list_radio_group_mine"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:button="@null"
            android:text="我的"
            android:textStyle="bold"
            android:textColor="@color/c_333333"
            android:textSize="12sp"
            android:gravity="center"
            android:checked="false"
            android:background="@drawable/bg_book_list_radio_select"
            />
    </RadioGroup>
    <com.typartybuilding.view.NoSlideViewPager
        android:id="@+id/book_list_fra_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>