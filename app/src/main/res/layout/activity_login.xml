<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.loginRelatedActivity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_bg">
        <ImageView
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@mipmap/danghui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号登录"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff333333"
            android:textSize="18sp"
            android:layout_marginTop="55dp"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            >
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout_login_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/red_tablayout"
                app:tabIndicatorFullWidth="false"
                app:tabTextAppearance="@style/tabLayout_text_size"
                app:tabSelectedTextColor="@color/tab_black"
                >
                <!--app:tabMode="fixed"
                app:tabMaxWidth="200dp"
                app:tabMinWidth="20dp"
                app:tabPaddingStart="55dp"
                app:tabPaddingEnd="18dp">-->

                <!--app:tabTextAppearance="@style/tabLayout_text_size">-->
                <!--app:tabGravity="center"-->

            </android.support.design.widget.TabLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="#ffdddddd"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:visibility="invisible"/>

        <com.typartybuilding.view.NoSlideViewPager
            android:id="@+id/viewpager_login_ac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
        </com.typartybuilding.view.NoSlideViewPager>
    </LinearLayout>

</LinearLayout>