<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7 "
    tools:context=".activity.plusRelatedActivity.RecordActivity">

    <com.typartybuilding.view.WhiteTitleLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
    </com.typartybuilding.view.WhiteTitleLayout>
    
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="发布到「党建微视」"
        android:textColor="#ffcecece"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ldt_icon_lvdong"/>

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/ac_record_shape1">
       <!-- <TextView
            android:visibility="invisible"
            android:id="@+id/textView_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="#ff666666"
            android:textSize="15sp"/>-->
        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="#ff666666"
            android:textSize="15sp"/>
    </FrameLayout>

    <ImageButton
        android:id="@+id/imageButton_play_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ac_record_selector1"/>

    <TextView
        android:id="@+id/textView_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_gravity="center_horizontal"
        android:text="播放"
        android:textColor="@color/record_ac_play0"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView_long_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:text="长按说话"
        android:textColor="#ffcccccc"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="11dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:src="@mipmap/ldt_icon_xiajiantou"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <ImageButton
            android:id="@+id/imageButton_long_click"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ac_record_selector2"
            android:foreground="?android:attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_upload"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/ac_record_selector3"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton_long_click"
            app:layout_constraintStart_toEndOf="@+id/imageButton_long_click"
            app:layout_constraintTop_toTopOf="@+id/imageButton_long_click" />

        <TextView
            android:id="@+id/textView_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="发布"
            android:textColor="#ffcccccc"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_upload"
            app:layout_constraintStart_toStartOf="@+id/imageView_upload"
            app:layout_constraintTop_toBottomOf="@+id/imageView_upload" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>