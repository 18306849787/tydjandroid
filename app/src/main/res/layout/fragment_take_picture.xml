<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".activity.plusRelatedActivity.Camera2Activity">

    <com.typartybuilding.view.AutoFitTextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageButton_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/back_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageButton_switch"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_camera_switch"
        android:layout_marginTop="34dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_back"
        app:layout_constraintEnd_toEndOf="parent"/>
   <!-- <ImageButton
        android:visibility="invisible"
        android:id="@+id/imageButton_jingyin"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ac_camera_selector3"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton_back" />-->

    <ImageView
        android:id="@+id/imageButton_paizhao"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/ac_camera_selector2"
        app:layout_constraintBottom_toBottomOf="@+id/textureView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--style="?android:attr/borderlessButtonStyle"
    android:foreground="?android:attr/selectableItemBackground"-->

    <!--<ImageView
        android:id="@+id/imageView_circle"
