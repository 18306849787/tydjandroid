        app:layout_constraintEnd_toEndOf="@+id/imageView_annulus"
        app:layout_constraintStart_toStartOf="@+id/imageView_annulus"
        app:layout_constraintTop_toTopOf="@+id/imageView_annulus" />-->

    <ImageButton
        android:visibility="invisible"
        android:id="@+id/imageButton_del"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="71dp"
        style="?android:attr/borderlessButtonStyle"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@mipmap/ps_btn_delete"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_paizhao"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_paizhao"
        app:layout_constraintTop_toTopOf="@+id/imageButton_paizhao" />

    <ImageButton
        android:visibility="invisible"
        android:id="@+id/imageButton_complete"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="71dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@mipmap/ps_btn_paishewancheng"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_paizhao"
        app:layout_constraintStart_toEndOf="@+id/imageButton_paizhao"
        app:layout_constraintTop_toTopOf="@+id/imageButton_paizhao" />


    <ImageButton
        android:visibility="visible"
        android:id="@+id/imageButton_upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:foreground="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:src="@mipmap/ps_btn_shangchuan"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_paizhao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton_paizhao" />

    <TextView
        android:id="@+id/textView_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="上传"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_upload"
        app:layout_constraintStart_toStartOf="@+id/imageButton_upload"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_upload" />

    <TextView
        android:id="@+id/textView_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:drawablePadding="6dp"
        android:drawableBottom="@drawable/ac_camera_shape3_1"
        android:text="拍照"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_paizhao"
        app:layout_constraintStart_toStartOf="@+id/imageButton_paizhao"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_paizhao" />

    <TextView
        android:id="@+id/textView_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:drawablePadding="6dp"
        android:drawableBottom="@drawable/ac_camera_shape3_0"
        android:text="拍视频"
        android:textColor="#ff6f5954"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_center"
        app:layout_constraintEnd_toStartOf="@+id/textView_center"
        app:layout_constraintTop_toTopOf="@+id/textView_center" />

